<br/>
<h2 class="text-center">La liste des gossips 💁‍</h2><br/>
<div class="container">
<table class="table">
    <thead class="fond-bleu">
      <tr>
        <th scope="col" class="text-white">#</th>
        <th scope="col" class="text-white">Titre du gossip</th>
        <th scope="col" class="text-white">Contenu du gossip</th>
        <th scope="col" class="text-white">Anonymous Gossiper</th>
        <th scope="col" class="text-white">Lien du gossip</th>
        <th scope="col" class="text-white">Commentaires</th>
      </tr>
    </thead>
    <tbody>
  <% Gossip.all.each do |gossip| %>
    <tr>
      <th scope="row"><%= gossip.id %></th>
      <th scope="row"><%= gossip.title %></th>
      <th scope="row"><%= gossip.content %></th>
      <th scope="row"><%= gossip.anonymous_gossiper %></th>
      <th scope="row"><%= link_to 'Voir le gossip', gossip_path(gossip.id) %></th>
      <th scope="row"><%= gossip.comments.count %></th>
    </tr>
  <% end %>
  </tbody>
</table>
</div>

<% if @current_user %>
<p class="text-center"><%= link_to 'Créer un nouveau gossip', new_gossip_path, class: "btn btn-lg btn-info" %></p>
<% end %>
